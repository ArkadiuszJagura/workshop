<!DOCTYPE hibernate-configuartion PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuartion>

    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL96Dialect</property>
        <property name="hibernate.jdbc.use_streams_for_binary">true</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <mapping package="pl.com.sages.spring.bootcamp.hibernate.model"/>

    </session-factory>

</hibernate-configuartion>
